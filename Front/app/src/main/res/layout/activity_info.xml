<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/profileImageLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="프로필 이미지"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nameLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/profileImageLinearLayout"
            android:background="@drawable/black_topline"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="세글자"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>
        <GridLayout
            android:id="@+id/gameGridLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/nameLinearLayout"
            android:columnCount="4"
            android:rowCount="2"
            android:background="@drawable/black_lowline"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="게임"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="승"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="무"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="패"
                />

            <TextView
                android:id="@+id/totalGame"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="560"
                />

            <TextView
                android:id="@+id/win"
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="200"
                />

            <TextView
                android:id="@+id/draw"
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="150"
                />
            <TextView
                android:id="@+id/lose"
                android:layout_width="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="210"
                />
        </GridLayout>

        <LinearLayout
            android:id="@+id/linkgoogle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/gameGridLayout"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Google 연동"
                />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/googleSignInButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                />

            <TextView
                android:id="@+id/completeGoogleSignInTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="연동 중"
                android:visibility="gone"
                />
        </LinearLayout>

        <Button
            android:id="@+id/toBattle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/linkgoogle"
            android:text="대결하기"
            android:backgroundTint="@color/black"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>